---
import AdminLayout from '../layouts/AdminLayout.astro';
---

<AdminLayout title="Settings" currentPath="/settings">
  <div class="mb-6">
    <h1 class="text-2xl font-bold text-gray-900">Settings</h1>
    <p class="mt-1 text-sm text-gray-500">Manage your blog settings</p>
  </div>

  <div class="space-y-6">
    <!-- Blog Information -->
    <div class="bg-white shadow overflow-hidden sm:rounded-lg">
      <div class="px-4 py-5 sm:px-6">
        <h3 class="text-lg leading-6 font-medium text-gray-900">Blog Information</h3>
        <p class="mt-1 max-w-2xl text-sm text-gray-500">Basic details about your blog.</p>
      </div>
      <div class="border-t border-gray-200 px-4 py-5 sm:p-6">
        <form class="space-y-6">
          <div>
            <label for="blog-name" class="block text-sm font-medium text-gray-700">
              Blog Name
            </label>
            <div class="mt-1">
              <input
                type="text"
                name="blog-name"
                id="blog-name"
                class="shadow-sm focus:ring-indigo-500 focus:border-indigo-500 block w-full sm:text-sm border-gray-300 rounded-md"
                value="My Awesome Blog"
              />
            </div>
          </div>

          <div>
            <label for="blog-description" class="block text-sm font-medium text-gray-700">
              Blog Description
            </label>
            <div class="mt-1">
              <textarea
                id="blog-description"
                name="blog-description"
                rows="3"
                class="shadow-sm focus:ring-indigo-500 focus:border-indigo-500 block w-full sm:text-sm border-gray-300 rounded-md"
              >A blog about web development and technology.</textarea>
            </div>
          </div>

          <div>
            <label for="blog-url" class="block text-sm font-medium text-gray-700">
              Blog URL
            </label>
            <div class="mt-1">
              <input
                type="url"
                name="blog-url"
                id="blog-url"
                class="shadow-sm focus:ring-indigo-500 focus:border-indigo-500 block w-full sm:text-sm border-gray-300 rounded-md"
                value="https://myblog.com"
              />
            </div>
          </div>

          <div class="flex justify-end">
            <button
              type="submit"
              class="inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500"
            >
              Save
            </button>
          </div>
        </form>
      </div>
    </div>

    <!-- Social Media -->
    <div class="bg-white shadow overflow-hidden sm:rounded-lg">
      <div class="px-4 py-5 sm:px-6">
        <h3 class="text-lg leading-6 font-medium text-gray-900">Social Media</h3>
        <p class="mt-1 max-w-2xl text-sm text-gray-500">Connect your social media accounts.</p>
      </div>
      <div class="border-t border-gray-200 px-4 py-5 sm:p-6">
        <form class="space-y-6">
          <div>
            <label for="twitter" class="block text-sm font-medium text-gray-700">
              Twitter
            </label>
            <div class="mt-1">
              <input
                type="text"
                name="twitter"
                id="twitter"
                class="shadow-sm focus:ring-indigo-500 focus:border-indigo-500 block w-full sm:text-sm border-gray-300 rounded-md"
                placeholder="@username"
              />
            </div>
          </div>

          <div>
            <label for="facebook" class="block text-sm font-medium text-gray-700">
              Facebook
            </label>
            <div class="mt-1">
              <input
                type="text"
                name="facebook"
                id="facebook"
                class="shadow-sm focus:ring-indigo-500 focus:border-indigo-500 block w-full sm:text-sm border-gray-300 rounded-md"
                placeholder="facebook.com/username"
              />
            </div>
          </div>

          <div>
            <label for="instagram" class="block text-sm font-medium text-gray-700">
              Instagram
            </label>
            <div class="mt-1">
              <input
                type="text"
                name="instagram"
                id="instagram"
                class="shadow-sm focus:ring-indigo-500 focus:border-indigo-500 block w-full sm:text-sm border-gray-300 rounded-md"
                placeholder="@username"
              />
            </div>
          </div>

          <div class="flex justify-end">
            <button
              type="submit"
              class="inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500"
            >
              Save
            </button>
          </div>
        </form>
      </div>
    </div>
  </div>
</AdminLayout>

