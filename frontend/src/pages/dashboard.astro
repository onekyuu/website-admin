---
import AdminLayout from '../layouts/AdminLayout.astro';

// Sample data for the dashboard
const stats = [
  { name: 'Total Posts', value: '42' },
  { name: 'Published Posts', value: '38' },
  { name: 'Draft Posts', value: '4' },
  { name: 'Total Comments', value: '156' },
];

const recentPosts = [
  { id: 1, title: 'Getting Started with Astro', status: 'Published', date: '2023-09-15' },
  { id: 2, title: 'Building a Blog with Astro', status: 'Published', date: '2023-09-10' },
  { id: 3, title: 'Advanced Astro Techniques', status: 'Draft', date: '2023-09-05' },
  { id: 4, title: 'Integrating Tailwind with Astro', status: 'Published', date: '2023-09-01' },
];
---

<AdminLayout title="Dashboard" currentPath="/dashboard">
  <div class="mb-6">
    <h1 class="text-2xl font-bold text-gray-900">Dashboard</h1>
    <p class="mt-1 text-sm text-gray-500">Overview of your blog statistics</p>
  </div>

  <div class="grid grid-cols-1 gap-5 sm:grid-cols-2 lg:grid-cols-4">
    {stats.map((stat) => (
      <div class="bg-white overflow-hidden shadow rounded-lg">
        <div class="px-4 py-5 sm:p-6">
          <dt class="text-sm font-medium text-gray-500 truncate">{stat.name}</dt>
          <dd class="mt-1 text-3xl font-semibold text-gray-900">{stat.value}</dd>
        </div>
      </div>
    ))}
  </div>

  <div class="mt-8">
    <h2 class="text-lg font-medium text-gray-900">Recent Posts</h2>
    <div class="mt-4 flex flex-col">
      <div class="-my-2 overflow-x-auto sm:-mx-6 lg:-mx-8">
        <div class="py-2 align-middle inline-block min-w-full sm:px-6 lg:px-8">
          <div class="shadow overflow-hidden border-b border-gray-200 sm:rounded-lg">
            <table class="min-w-full divide-y divide-gray-200">
              <thead class="bg-gray-50">
                <tr>
                  <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                    Title
                  </th>
                  <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                    Status
                  </th>
                  <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                    Date
                  </th>
                  <th scope="col" class="relative px-6 py-3">
                    <span class="sr-only">Edit</span>
                  </th>
                </tr>
              </thead>
              <tbody class="bg-white divide-y divide-gray-200">
                {recentPosts.map((post) => (
                  <tr>
                    <td class="px-6 py-4 whitespace-nowrap">
                      <div class="text-sm font-medium text-gray-900">{post.title}</div>
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap">
                      <span class:list={[
                        'px-2 inline-flex text-xs leading-5 font-semibold rounded-full',
                        post.status === 'Published' 
                          ? 'bg-green-100 text-green-800' 
                          : 'bg-yellow-100 text-yellow-800'
                      ]}>
                        {post.status}
                      </span>
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                      {post.date}
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                      <a href={`/posts/${post.id}`} class="text-indigo-600 hover:text-indigo-900">
                        Edit
                      </a>
                    </td>
                  </tr>
                ))}
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</AdminLayout>

