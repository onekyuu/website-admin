---
import { Image } from 'astro:assets';

interface Props {
  currentPath: string;
}

const { currentPath } = Astro.props;

const navigation = [
  { name: 'Dashboard', href: '/dashboard', icon: 'grid' },
  { name: 'Posts', href: '/posts', icon: 'file-text' },
  { name: 'Comments', href: '/comments', icon: 'message-square' },
  { name: 'Users', href: '/users', icon: 'users' },
  { name: 'Settings', href: '/settings', icon: 'settings' },
];
---

<aside class="hidden md:flex md:flex-col md:w-64 md:fixed md:inset-y-0 z-10">
  <div class="flex flex-col flex-1 min-h-0 bg-white border-r border-gray-200">
    <div class="flex items-center h-16 flex-shrink-0 px-4 border-b border-gray-200">
      <div class="flex items-center space-x-2">
        <div class="w-8 h-8 bg-indigo-600 rounded-md flex items-center justify-center">
          <span class="text-white font-bold text-lg">B</span>
        </div>
        <span class="text-xl font-semibold">Blog Admin</span>
      </div>
    </div>
    <div class="flex-1 flex flex-col pt-5 pb-4 overflow-y-auto">
      <nav class="mt-5 flex-1 px-2 space-y-1">
        {navigation.map((item) => (
          <a
            href={item.href}
            class:list={[
              'group flex items-center px-2 py-2 text-sm font-medium rounded-md',
              currentPath.startsWith(item.href)
                ? 'bg-indigo-50 text-indigo-600'
                : 'text-gray-600 hover:bg-gray-50 hover:text-gray-900',
            ]}
          >
            <span class="mr-3 h-6 w-6 flex items-center justify-center">
              <span class:list={[
                'iconify',
                currentPath.startsWith(item.href) ? 'text-indigo-600' : 'text-gray-400 group-hover:text-gray-500',
              ]} data-icon={`lucide:${item.icon}`}></span>
            </span>
            {item.name}
          </a>
        ))}
      </nav>
    </div>
    <div class="flex-shrink-0 flex border-t border-gray-200 p-4">
      <a href="#" class="flex-shrink-0 group block">
        <div class="flex items-center">
          <div>
            <img
              class="inline-block h-10 w-10 rounded-full"
              src="/placeholder.svg?height=40&width=40"
              alt="User avatar"
            />
          </div>
          <div class="ml-3">
            <p class="text-base font-medium text-gray-700 group-hover:text-gray-900">
              Admin User
            </p>
            <p class="text-sm font-medium text-gray-500 group-hover:text-gray-700">
              Logout
            </p>
          </div>
        </div>
      </a>
    </div>
  </div>
</aside>

